@model Cinema.Models.Genre
@{
    ViewData["Title"] = "Create";
}

<h2>Create Genre</h2>
<form method="post" asp-action="Add" asp-controller="Genre">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movies"></label>
        <input asp-for="Movies" asp-items="@(new SelectList(ViewBag.Movies,"Title"))"
               class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>